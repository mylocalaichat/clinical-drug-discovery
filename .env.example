# Dagster Configuration
# IMPORTANT: DAGSTER_HOME must be an absolute path
DAGSTER_HOME=/absolute/path/to/your/project/.dagster

# PostgreSQL Configuration for Dagster
DAGSTER_POSTGRES_USER=dagster_user
DAGSTER_POSTGRES_PASSWORD=dagster_password_123
DAGSTER_POSTGRES_HOST=localhost
DAGSTER_POSTGRES_PORT=5432
DAGSTER_POSTGRES_DB=clinical_drug_discovery_db
DAGSTER_POSTGRES_SCHEMA=dagster

# Constructed connection string (auto-generated, don't edit)
DAGSTER_POSTGRES_URL=postgresql://${DAGSTER_POSTGRES_USER}:${DAGSTER_POSTGRES_PASSWORD}@${DAGSTER_POSTGRES_HOST}:${DAGSTER_POSTGRES_PORT}/${DAGSTER_POSTGRES_DB}

# Memgraph Database Settings
MEMGRAPH_URI=bolt://localhost:7687
MEMGRAPH_USER=
MEMGRAPH_PASSWORD=
MEMGRAPH_DATABASE=memgraph

# MLflow Configuration
MLFLOW_TRACKING_URI=file:./mlruns

# Off-Label Drug Discovery Configuration
# Data parameters
OFFLABEL_DRUG_TOP_K=10                      # Top K drug neighbors to keep after pruning
OFFLABEL_PROTEIN_TOP_K=20                   # Top K protein neighbors to keep after pruning
OFFLABEL_TEST_SIZE=0.2                      # Test set fraction (0.0-1.0)
OFFLABEL_VAL_SPLIT=0.2                      # Validation set fraction (0.0-1.0)
OFFLABEL_NUM_CONTRAINDICATIONS=4800         # Number of contraindications to sample as negatives
OFFLABEL_NUM_RANDOM_NEGATIVES=1600          # Number of random negative pairs to generate
OFFLABEL_RANDOM_SEED=42                     # Random seed for reproducibility

# Model parameters
OFFLABEL_EMBEDDING_DIM=128                  # Node embedding dimension
OFFLABEL_HIDDEN_DIM=128                     # Hidden layer dimension for GNN
OFFLABEL_NUM_LAYERS=2                       # Number of GNN layers
OFFLABEL_DROPOUT=0.3                        # Dropout probability (0.0-1.0)

# Training parameters
OFFLABEL_BATCH_SIZE=64                      # Training batch size
OFFLABEL_NUM_EPOCHS=5                       # Maximum number of training epochs
OFFLABEL_LEARNING_RATE=0.001                # Learning rate for Adam optimizer
OFFLABEL_EARLY_STOPPING_PATIENCE=1          # Early stopping patience (epochs)

# Inference parameters (for novel predictions)
OFFLABEL_MAX_CANDIDATES=100000              # Maximum number of candidate pairs to predict
OFFLABEL_MIN_DRUG_DEGREE=5                  # Minimum connectivity for drugs (edges)
OFFLABEL_MIN_DISEASE_DEGREE=5               # Minimum connectivity for diseases (edges)
OFFLABEL_INFERENCE_BATCH_SIZE=512           # Larger batch size for inference (no gradients)
OFFLABEL_TOP_N_PREDICTIONS=1000             # Number of top predictions to save separately
